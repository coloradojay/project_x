<div class="row">
	<div class="col-md-10">
		<h1>Edit your Post!</h1>

		<div class="row">
			<div class="col-md-10 form-group">
				<%= simple_form_for @post do |f| %>
					<%= f.input :title, placeholder: 'Report Title', :class => "form-control" %>		
					<%= f.input :body, placeholder: 'Report Body', :class => "form-control" %>
					<%= f.file_field :image, placeholder: 'Add/Update an Image' %>
					<br />
					<%= f.submit "Update Post", :class => "btn btn-primary col-md-2" %>
				<% end %>
			</div>
		</div>
		<%= link_to "Back to the list!", posts_path %>
	</div>
</div>