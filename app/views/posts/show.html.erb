<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2 class="centered">Report Title: <%= @post.title %></h2>
    <div class="row">
      <div class="col-md-12 cold-md-offset-2">
        <h4>Breed: <%= @post.dog_breed %>.</h4>
        <h4>Report Body: <%= @post.body %>.</h4>
        <% if current_user %>
          <p>Added by <%= @post.user.name %> -- <%= @post.date_added %> </p>
        <% end %>
          <p><%= image_tag @post.image.url(:small) if @post.image.url(:small).present? %></p>

        <section>
            <h4>Comments</h4>

            <div>
                <% @post.comments.each do |comment| %>        
                    <div>
                        <p><%= comment.body %> -- added by: <%= comment.date_added %></p>
                    </div>
                <% end %>
            </div>
        </section>

        <section>
            <h4>Add a new comment</h4>
                <ul>
                    <% @comment.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>  
                    <% end %>
                </ul>    
            <%= form_for [@post, @comment] do |f| %>
                <div>
                    <%= f.label :body, "Comment:" %>
                    <%= f.text_area :body%>
                </div>
                <%= f.submit "Add a comment!" %>
            <% end %>
        </section>
        
      </div>
    </div> 
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if current_user %>
        <%=  link_to "Edit your post!", edit_post_path, :class => 'btn btn-success'  %>
        <%= link_to "Delete this post!", :post, method: :delete, data: { confirm: "Are you sure you want to delete your post?" }, :class => 'btn btn-success'  %>
        <%= link_to "Back to the list!", posts_path, :class => 'btn btn-success'  %>
    <% else %>
        <%= link_to "Back to the list!", posts_path, :class => 'btn btn-success'  %>
    <% end %>
  </div>
</div>
