<h1>New User</h1>

<%= simple_form_for @user do |f| %>
		
		<%= f.input :user_name, placeholder: 'User Name' %>		
		<%= f.input :name, placeholder: 'First & Last Name' %>
		<%= f.input :email, placeholder: 'Email' %>
		<%= f.input :image, placeholder: 'Add an Image' %>

	<%= f.submit "Add User!" %>

<% end %>

<%= link_to "Back to the list!", posts_path %>
