<div class="row">
	
	<div class="col-md-10 col-md-offset-2" >

		<h1><%= current_user.name %></h1>

		<div class="row">
			
			<div class="col-md-6">
				<p><%= image_tag @user.avatar.url(:small) if @user.avatar.url(:small).present? %></p>
			</div>
			
			<div class="col-md-4">
			
				<div class="row">
				<p>First &amp; Last Name: <%= current_user.name %></p>
				</div>
			
				<div class="row">
				<p>Email: <%= current_user.email %></p>
				</div>
			
				<div class="row">
					<p>Reports:<br />
						<ul>
							<% @user.posts.each do |p| %>
								<li><strong><%= p.title %></strong>
									<%= link_to "View Post", post_path(p) %>
								</li>
							<% end %>
						</ul>
					</p>
				</div>

			</div>
		</div>

		<%= link_to "Add a report", new_post_path, :class => 'btn btn-primary' %>
		<%= link_to "Update your profile!", edit_user_path, :class => 'btn btn-primary'  %>
		<%= link_to "Delete your profile!", :user, method: :delete, data: { confirm: "Are you sure you want to delete your profile?" }, :class => 'btn btn-primary'  %>
	</div>
</div>